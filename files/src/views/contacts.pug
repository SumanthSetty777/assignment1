extends includes/layout
block content
  - const getContactsApiDetails = ' Get all companies\n GET /crm/v3/objects/contacts\n crm.contacts.basicApi.getPage'
  .container
    h3 Contacts
    pre #{getContactsApiDetails}
    table
      thead
        tr
          th ID
          th Name
          th Company
          th Email
          th Community
      tbody
        each contact in contacts
          tr
            td #{contact.id}
            td #{contact.name}
            td #{contact.companyName}
            td #{contact.email}
            td #{contact.community}
